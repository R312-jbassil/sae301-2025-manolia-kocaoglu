---
const { title = "TaVue — Lunettes personnalisées", description = "" } = Astro.props;
import "../styles/global.css";
---
<html lang="fr" data-theme="nord">
  <head>
    <meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title><meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-base-100 text-neutral font-sans">
    <header class="border-b bg-base-100">
      <nav class="navbar max-w-6xl mx-auto px-4">
        <div class="navbar-start">
          <a href="/" class="btn btn-ghost normal-case text-2xl font-['Playfair Display'] text-primary">TaVue</a>
        </div>
        <div class="navbar-end gap-2">
          <a href="/configurateur" class="btn btn-ghost">Configurateur</a>
          <a href="/mes-modeles" class="btn btn-ghost">Ma Collection</a>
          <a href="/login" class="btn btn-primary">Compte</a>
        </div>
      </nav>
    </header>
    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t bg-base-100">
      <div class="max-w-6xl mx-auto px-4 py-10 text-sm text-neutral/70">
        © {new Date().getFullYear()} TaVue — Fabriqué en France
      </div>
    </footer>
  </body>
</html>
