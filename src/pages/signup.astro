---
import LayoutTaVue from "../layouts/LayoutTaVue.astro";
import pb from "../lib/pb";

let error = "";
let success = "";

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const nom = String(data.get("nom") || "");
  const prenom = String(data.get("prenom") || "");
  const email = String(data.get("email") || "");
  const password = String(data.get("password") || "");
  const passwordConfirm = String(data.get("passwordConfirm") || "");
  
  try {
    if (password !== passwordConfirm) {
      error = "Les mots de passe ne correspondent pas.";
    } else if (password.length < 8) {
      error = "Le mot de passe doit contenir au moins 8 caractères.";
    } else {
      // Créer le compte utilisateur
      await pb.collection("users").create({ 
        email, 
        password, 
        passwordConfirm: password, 
        name: `${prenom} ${nom}`.trim()
      });
      
      // Rediriger vers la page de login avec un message de succès
      return Astro.redirect("/login?success=account_created");
    }
  } catch (e: any) {
    if (e?.message?.includes("email")) {
      error = "Cette adresse email est déjà utilisée.";
    } else {
      error = e?.message || "Une erreur est survenue lors de la création du compte.";
    }
  }
}
