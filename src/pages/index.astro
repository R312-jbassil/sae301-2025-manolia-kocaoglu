---
import LayoutTaVue from "../layouts/LayoutTaVue.astro";
---
<LayoutTaVue title="TaVue — Lunettes personnalisées">
  <section class="grid lg:grid-cols-2 gap-12 items-center">
    <div>
      <h1 class="text-5xl font-['Playfair Display'] leading-tight text-primary">
        Lunettes françaises, sobrement élégantes
      </h1>
      <p class="mt-4 text-base opacity-80">
        Composez votre paire : matériaux, couleurs, dimensions — et enregistrez vos modèles.
      </p>
      <div class="mt-8 flex gap-3">
        <a href="/configurateur" class="btn btn-primary">Ouvrir le configurateur</a>
        <a href="/mes-modeles" class="btn btn-outline">Voir mes modèles</a>
      </div>
    </div>

    <div class="card bg-base-100 border shadow-xl">
      <div class="card-body">
        <div class="tabs tabs-boxed w-fit">
          <a class="tab tab-active">Face</a>
          <a class="tab">Profil</a>
          <a class="tab">3/4</a>
        </div>
        <div class="mt-4 aspect-[4/3] rounded-box bg-base-200 grid place-items-center text-neutral/50">
          SVG
        </div>
        <div class="mt-4 flex items-center justify-between">
          <div>
            <div class="opacity-70 text-sm">Modèle</div>
            <div class="text-xl font-semibold">TaVue Classic</div>
          </div>
          <div class="text-2xl font-semibold">289 €</div>
        </div>
      </div>
    </div>
  </section>
</LayoutTaVue>
