---
import LayoutTaVue from "../layouts/LayoutTaVue.astro";
import pb from "../lib/pb";

let error = "";
let success = "";

// Vérifier si un message de succès est passé dans l'URL
const url = new URL(Astro.request.url);
if (url.searchParams.get("success") === "account_created") {
  success = "Votre compte a été créé avec succès ! Vous pouvez maintenant vous connecter.";
}

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const email = String(data.get("email") || "").trim();
  const password = String(data.get("password") || "");
  
  // Validation basique
  if (!email || !password) {
    error = "Veuillez remplir tous les champs.";
  } else {
    try {
      console.log("Tentative de connexion pour:", email);
      
      // Authentifier l'utilisateur
      const authData = await pb.collection("users").authWithPassword(email, password);
      
      console.log("Connexion réussie pour:", authData.record.email);
      
      // Créer un cookie avec le token d'authentification
      const cookie = pb.authStore.exportToCookie({
        httpOnly: false, // Permet l'accès côté client
        secure: false,   // À mettre à true en production avec HTTPS
        sameSite: 'lax',
        path: '/'
      });
      
      // Rediriger avec le cookie
      return new Response(null, {
        status: 302,
        headers: {
          "Location": "/mes-modeles",
          "Set-Cookie": cookie
        }
      });
    } catch (e: any) {
      console.error("Erreur de connexion:", e);
      
      // Messages d'erreur plus spécifiques
      if (e?.status === 400) {
        error = "Email ou mot de passe incorrect.";
      } else if (e?.status === 429) {
        error = "Trop de tentatives. Veuillez réessayer dans quelques minutes.";
      } else if (e?.message?.includes("Failed to authenticate")) {
        error = "Email ou mot de passe incorrect. Veuillez vérifier vos identifiants.";
      } else {
        error = `Erreur de connexion : ${e?.message || "Erreur inconnue"}`;
      }
    }
  }
}
---

<LayoutTaVue title="Connexion — TaVue">
  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
