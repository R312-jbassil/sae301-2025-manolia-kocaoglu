            <div class="p-2 bg-[#2C3E50] rounded-lg flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Commandes simplifiées</h3>
              <p class="text-sm text-gray-600">Commandez en quelques secondes vos modèles favoris</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="p-2 bg-[#2C3E50] rounded-lg flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Suivi en temps réel</h3>
              <p class="text-sm text-gray-600">Suivez la fabrication et la livraison de vos lunettes</p>
            </div>
          </div>
        </div>

        <!-- Logo et baseline -->
        <div class="pt-8 border-t border-gray-200">
          <div class="flex items-center gap-2 text-xl font-serif font-semibold text-[#2C3E50] mb-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            TaVue
          </div>
          <p class="text-sm text-gray-600">
            L'excellence de la lunetterie française depuis 2024
          </p>
        </div>
      </div>

      <!-- Colonne droite : Formulaire -->
      <div class="space-y-6">
        
        <!-- Alertes -->
        {error && (
          <div class="alert alert-error bg-red-50 border border-red-200 text-red-800 rounded-lg p-4">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm">{error}</span>
          </div>
        )}

        {success && (
          <div class="alert alert-success bg-green-50 border border-green-200 text-green-800 rounded-lg p-4">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm">{success}</span>
          </div>
        )}

        <!-- Card de connexion -->
        <div class="card bg-white border border-gray-200 shadow-lg">
          <div class="card-body p-8">
            <h2 class="text-2xl font-serif font-semibold text-gray-900 mb-6">
              Se connecter
            </h2>

            <form method="POST" class="space-y-6">
              
              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Adresse email
                </label>
                <input 
                  id="email"
                  name="email" 
                  type="email" 
                  required 
                  placeholder="votre@email.com"
                  class="input input-bordered w-full"
                  autocomplete="email"
                  value={error ? (Astro.request.method === "POST" ? String(await Astro.request.formData().then(d => d.get("email"))) : "") : ""}
                />
              </div>

              <!-- Password -->
              <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                  Mot de passe
                </label>
                <input 
                  id="password"
                  name="password" 
                  type="password" 
                  required 
                  placeholder="••••••••"
                  class="input input-bordered w-full"
                  autocomplete="current-password"
                />
              </div>

              <!-- Options -->
              <div class="flex items-center justify-between">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-sm" />
                  <span class="text-sm text-gray-600">Se souvenir de moi</span>
                </label>
                <a href="/mot-de-passe-oublie" class="text-sm text-[#2C3E50] hover:underline">
                  Mot de passe oublié ?
                </a>
              </div>

              <!-- Bouton de connexion -->
              <button 
                type="submit"
                class="btn btn-primary btn-block btn-lg"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                </svg>
                Se connecter
              </button>
            </form>

            <!-- Divider -->
            <div class="divider text-xs text-gray-500">ou continuer avec</div>

            <!-- Social login -->
            <div class="grid grid-cols-2 gap-3">
              <button class="btn btn-outline btn-sm">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
                </svg>
                Facebook
              </button>
              <button class="btn btn-outline btn-sm">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.545 10.239v3.821h5.445c-.712 2.315-2.647 3.972-5.445 3.972a6.033 6.033 0 110-12.064c1.498 0 2.866.549 3.921 1.453l2.814-2.814A9.969 9.969 0 0012.545 2C7.021 2 2.543 6.477 2.543 12s4.478 10 10.002 10c8.396 0 10.249-7.85 9.426-11.748l-9.426-.013z"/>
                </svg>
                Google
              </button>
            </div>

            <!-- Lien vers création de compte -->
            <div class="text-center pt-4">
              <p class="text-sm text-gray-600">
                Pas encore de compte ?
                <a href="/signup" class="text-[#2C3E50] hover:underline font-medium ml-1">
                  Créer un compte
                </a>
              </p>
            </div>

          </div>
        </div>

        <!-- Aide -->
        <div class="text-center">
          <p class="text-sm text-gray-600">
            Besoin d'aide ? 
            <a href="/contact" class="text-[#2C3E50] hover:underline">
              Contactez notre service client
            </a>
          </p>
        </div>

        <!-- Debug info (à retirer en production) -->
        {import.meta.env.MODE === 'development' && (
          <div class="text-xs text-gray-500 text-center">
            <details>
              <summary class="cursor-pointer">Infos de debug</summary>
              <div class="mt-2 p-2 bg-gray-100 rounded text-left">
                <p>Mode: {import.meta.env.MODE}</p>
                <p>URL PocketBase: {import.meta.env.MODE === 'development' ? 'http://localhost:8090' : 'https://sea301.manolia.kocaoglu.fr:443'}</p>
              </div>
            </details>
          </div>
        )}

      </div>

    </div>
  </div>
</LayoutTaVue>