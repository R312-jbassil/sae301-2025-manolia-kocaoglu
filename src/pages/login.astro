import LayoutTaVue from "../layouts/LayoutTaVue.astro";
import pb, { syncAuthCookie, ensureUserProfile } from "../lib/pb";

let error = "";
let success = "";

// V√©rifier si un message de succ√®s est pass√© dans l'URL
const url = new URL(Astro.request.url);
if (url.searchParams.get("success") === "account_created") {
  success = "Votre compte a √©t√© cr√©√© avec succ√®s ! Vous pouvez maintenant vous connecter.";
}

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const email = String(data.get("email") || "").trim().toLowerCase();
  const password = String(data.get("password") || "");
  
  // Validation basique
  if (!email || !password) {
    error = "Veuillez remplir tous les champs.";
  } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
    error = "Adresse email invalide.";
  } else {
    try {
      console.log("=== TENTATIVE DE CONNEXION ===");
      console.log("Email:", email);
      console.log("PocketBase URL:", import.meta.env.MODE === 'development' ? 'http://localhost:8090' : 'https://sae301.manolia.kocaoglu.fr');
      
      // Authentifier l'utilisateur
      const authData = await pb.collection("users").authWithPassword(email, password);
      
      console.log("‚úì Connexion r√©ussie");
      console.log("User ID:", authData.record.id);
      console.log("Token:", authData.token ? "pr√©sent" : "absent");
      
      // Cr√©er/v√©rifier le profil utilisateur
      await ensureUserProfile();
      
      // Cr√©er un cookie avec le token d'authentification
      const cookie = pb.authStore.exportToCookie({
        httpOnly: false,
        secure: import.meta.env.PROD,
        sameSite: 'lax',
        path: '/',
        maxAge: 60 * 60 * 24 * 7 // 7 jours
      });
      
      console.log("Cookie cr√©√©:", cookie.substring(0, 50) + "...");
      
      // Rediriger avec le cookie
      return new Response(null, {
        status: 302,
        headers: {
          "Location": "/mes-modeles",
          "Set-Cookie": cookie
        }
      });
      
    } catch (e: any) {
      console.error("=== ERREUR DE CONNEXION ===");
      console.error("Status:", e?.status);
      console.error("Message:", e?.message);
      console.error("Data:", e?.data);
      
      // Messages d'erreur sp√©cifiques
      if (e?.status === 400) {
        error = "Email ou mot de passe incorrect.";
      } else if (e?.status === 429) {
        error = "Trop de tentatives. Veuillez r√©essayer dans quelques minutes.";
      } else if (e?.message?.includes("Failed to authenticate")) {
        error = "Identifiants incorrects. V√©rifiez votre email et mot de passe.";
      } else if (e?.message?.includes("fetch")) {
        error = "Impossible de se connecter au serveur. V√©rifiez votre connexion.";
      } else {
        error = `Erreur de connexion : ${e?.message || "Erreur inconnue"}`;
      }
    }
  }
}
