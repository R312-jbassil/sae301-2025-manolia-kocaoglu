---
import LayoutTaVue from "../layouts/LayoutTaVue.astro";
import pb from "../lib/pb";

let error = "";
let success = "";

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const email = String(data.get("email") || "");
  const password = String(data.get("password") || "");
  const action = String(data.get("action") || "login");
  
  try {
    if (action === "signup") {
      await pb.collection("users").create({ 
        email, 
        password, 
        passwordConfirm: password, 
        name: "" 
      });
      success = "Compte créé avec succès ! Vous pouvez maintenant vous connecter.";
    } else {
      await pb.collection("users").authWithPassword(email, password);
      return Astro.redirect("/mes-modeles");
    }
  } catch (e: any) {
    error = e?.message || "Erreur d'authentification. Vérifiez vos identifiants.";
  }
}
---

<LayoutTaVue title="Connexion — TaVue">
  <div class="max-w-6xl mx-auto py-12">
